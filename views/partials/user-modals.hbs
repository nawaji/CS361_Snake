<div id="modal-background" class="hidden"></div>
<div id="add-user-modal" class="hidden">
	<div class="modal-dialogue">

		<div class="modal-header">
			<h2>Add ranking</h2>
			<button type="button" class="modal-close-button"></button>
		</div>

		<div class="modal-body">
			<div class="name-input">
				<label for="name-input-text">Name: 
					<input type="text" name="name-input-text" id="name-input-textfield"
					size="10" maxlength="10" required="required" />
				</label>
				
				<p id="user-score">You scored: n/a</p>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="cancel-add-user">Cancel</button>
			<button type="button" class="accept-add-user">Add ranking</button>
		</div>
	</div>
</div>

<div id="confirm-quit-modal" class="hidden">
	<div class="modal-dialogue">

		<div class="modal-header">
			<h2>Add ranking</h2>
			<button type="button" class="modal-close-button"></button>
		</div>

		<div class="modal-body">
			<div class="name-input">
				<label for="name-input-text">Are you sure you don't want to add to leaderboards?</label>
			</div>
		</div>
		<div class="modal-footer">
			<button type="button" class="confirm-cancel">No</button>
			<button type="button" class="confirm-accept">Yes</button>
		</div>

	</div>
</div>

<div id="customization-modal">
	<div class="test">
		<h2>YEET</h2>
		<label for="snake-colors">Snake color: </label>
		<select id="snake-colors">
			<option value="green">Green (default)</option>
			<option value="red">Red</option>
			<option value="yellow">Yellow</option>
			<option value="orange">Orange</option>
			<option value="blue">Blue</option>
			<option value="purple">Purple</option>
		</select>
		<input type="Submit"></input>
		<hr>
		<label for="food-colors">Food color: </label>
		<select id="food-colors">
			<option value="red">Red (default)</option>			
			<option value="green">Green</option>
			<option value="yellow">Yellow</option>
			<option value="orange">Orange</option>
			<option value="blue">Blue</option>
			<option value="purple">Purple</option>
		</select>
		<input type="Submit"></input>
	</div>
</div>